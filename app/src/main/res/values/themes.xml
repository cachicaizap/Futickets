<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Futickets" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textAppearanceTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LoginInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@color/fst_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/purple_200</item>
    </style>
    <style name="LoginInput" parent="LoginInputLayout">
        <item name="android:paddingTop">25dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textAppearanceCustom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonLogin" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="RegisterInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@color/snd_color2</item>
        <item name="android:textColor">@color/fst_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="colorOnSurface">@color/fst_color</item>
        <item name="colorPrimary">@color/fst_color</item>
        <item name="colorControlActivated">@color/fst_color</item>
        <item name="colorControlHighlight">@color/purple_200</item>
    </style>
    <style name="RegisterInput" parent="RegisterInputLayout">
        <item name="android:paddingTop">25dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>
</resources>